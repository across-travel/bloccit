$(function(){
  data = $.parseJSON(gon.usernames);
  $('#post_body').atwho({at:"@", 'data':data});
});


gon.comments.forEach(function(comment) {
	$(document).ready(function() { 
	  $('#reply-' + comment.id).click(function(e){
	  	e.preventDefault();
	  	$('#new_comment-' + comment.id).slideToggle();
		});
	});
})
