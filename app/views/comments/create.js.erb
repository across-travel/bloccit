<% if @comment.valid? %>
 	$('.js-comments').prepend("<%= j render(@comment) %>");
 	$('.new-comment').html("<%= escape_javascript(render partial: 'comments/form', locals: { commentable: @comment.commentable, comment: @new_comment }) %>");
<% else %>
 	$('.new-comment').html("<%= escape_javascript(render partial: 'comments/form', locals: { commentable: @comment.commentable, comment: @comment }) %>");
	<%= ajax_flash('.flash') %>
<% end %>