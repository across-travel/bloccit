<%= form_for [commentable, comment], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control comment_body', placeholder: "Enter a new comment" %>
	</div>
  <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
<% end %>